# /etc/nginx/sites-available/2-app_server-nginx_config
# Symbolic link to this file is usually placed in /etc/nginx/sites-enabled/

server {
    listen 80;
    server_name localhost;  # Change to your server's public IP or domain name

    location /airbnb-onepage/ {
        proxy_pass http://127.0.0.1:5000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Additional proxy configurations if needed
        # ...

        # Serve static files directly if they exist
        if (-f $request_filename) {
            break;
        }

        # If the requested file does not exist, rewrite to the app's entry point
        if (!-e $request_filename) {
            rewrite ^/airbnb-onepage/(.*)$ /airbnb-onepage/index.html break;
        }
    }

    # Additional server configurations if needed
    # ...

    # Error pages
    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root /usr/share/nginx/html;
    }

    # Logging
    access_log /var/log/nginx/2-app_server_access.log;
    error_log /var/log/nginx/2-app_server_error.log;
}

